{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "import/extensions": [
      "off",
      "never"
    ],
    "import/no-extraneous-dependencies": 0,
    "no-console": 1,
    "no-param-reassign": 0,
    "prefer-destructuring": ["error",
      {
        "VariableDeclarator": {
          "array": true,
          "object": true
        },
        "AssignmentExpression": {
          "array": true,
          "object": false
        }
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "semi": 0
  }
}
